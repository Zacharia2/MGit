<layout>

    <data>

        <variable
            name="viewModel"
            type="xyz.realms.mgit.ui.repolist.RepoListViewModel" />

        <variable
            name="cloneViewModel"
            type="xyz.realms.mgit.ui.clone.CloneViewModel" />

        <variable
            name="clickHandler"
            type="xyz.realms.mgit.common.OnActionClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="xyz.realms.mgit.ui.repolist.RepoListActivity">

        <include
            android:id="@+id/cloneViewInclude"
            layout="@layout/clone_view"
            bind:viewModel="@{cloneViewModel}"
            bind:clickHandler="@{clickHandler}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repoList"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" />

    </LinearLayout>
</layout>
