<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:name="xyz.realms.mgit.MGitDebugApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        tools:replace="android:name">
        <activity
            android:name="xyz.realms.mgit.ui.repolist.RepoListActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="xyz.realms.mgit.ui.RepoDetailActivity"
            android:label="@string/title_activity_repo_detail"
            android:parentActivityName="xyz.realms.mgit.ui.repolist.RepoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.realms.mgit.ui.repolist.RepoListActivity" />
        </activity>
        <activity
            android:name="xyz.realms.mgit.ui.ViewFileActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="xyz.realms.mgit.ui.RepoDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.realms.mgit.ui.RepoDetailActivity" />
        </activity>
        <activity
            android:name="xyz.realms.mgit.ui.BranchChooserActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="xyz.realms.mgit.ui.RepoDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.realms.mgit.ui.RepoDetailActivity" />
        </activity>
        <activity
            android:name="xyz.realms.mgit.ui.CommitDiffActivity"
            android:parentActivityName="xyz.realms.mgit.ui.RepoDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.realms.mgit.ui.RepoDetailActivity" />
        </activity>
        <activity
            android:name="xyz.realms.mgit.ui.explorer.ImportRepositoryActivity"
            android:label="@string/title_activity_import_repository"
            android:parentActivityName="xyz.realms.mgit.ui.repolist.RepoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.realms.mgit.ui.repolist.RepoListActivity" />
        </activity>
        <activity
            android:name="xyz.realms.mgit.ui.explorer.PrivateKeyManageActivity"
            android:label="@string/title_activity_private_key_manage"
            android:parentActivityName="xyz.realms.mgit.ui.repolist.RepoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.realms.mgit.ui.repolist.RepoListActivity" />
        </activity>
        <activity
            android:name="xyz.realms.mgit.ui.explorer.ExploreFileActivity"
            android:label="@string/title_activity_explore_file"
            android:parentActivityName="xyz.realms.mgit.ui.explorer.PrivateKeyManageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.realms.mgit.ui.explorer.PrivateKeyManageActivity" />
        </activity>
        <activity
            android:name="xyz.realms.mgit.ui.UserSettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="xyz.realms.mgit.ui.repolist.RepoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.realms.mgit.ui.repolist.RepoListActivity" />
        </activity>
        <activity
            android:name="xyz.realms.mgit.ui.explorer.ExploreRootDirActivity"
            android:label="@string/title_activity_explore_file"
            android:parentActivityName="xyz.realms.mgit.ui.UserSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.realms.mgit.ui.UserSettingsActivity" />
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="xyz.realms.mgit.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

    </application>

</manifest>
